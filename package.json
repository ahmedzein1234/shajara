{
  "name": "shajara",
  "version": "1.0.0",
  "private": true,
  "description": "Arabic-first family tree application - شجرة العائلة",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:install": "playwright install",
    "pages:build": "opennextjs-cloudflare build",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "deploy:dev": "opennextjs-cloudflare build && wrangler deploy --env development",
    "deploy:staging": "opennextjs-cloudflare build && wrangler deploy --env staging",
    "deploy:prod": "opennextjs-cloudflare build && wrangler deploy",
    "cf:build": "opennextjs-cloudflare build",
    "db:migrate": "wrangler d1 migrations apply shajara-db --local",
    "db:migrate:dev": "wrangler d1 migrations apply shajara-db-dev --remote --env development",
    "db:migrate:staging": "wrangler d1 migrations apply shajara-db-staging --remote --env staging",
    "db:migrate:prod": "wrangler d1 migrations apply shajara-db --remote",
    "db:seed": "tsx scripts/seed.ts",
    "db:backup": "tsx scripts/backup-db.ts",
    "env:setup": "tsx scripts/setup-environments.ts"
  },
  "dependencies": {
    "@auth/core": "^0.41.1",
    "@auth/d1-adapter": "^1.11.1",
    "@fontsource/amiri": "^5.2.8",
    "@fontsource/aref-ruqaa": "^5.2.8",
    "@fontsource/cairo": "^5.2.7",
    "@fontsource/tajawal": "^5.2.7",
    "@internationalized/date": "^3.10.1",
    "@opennextjs/cloudflare": "^1.14.7",
    "@tailwindcss/postcss": "^4.1.18",
    "@xyflow/react": "^12.10.0",
    "bcryptjs": "^3.0.3",
    "clsx": "^2.1.1",
    "dompurify": "^3.3.1",
    "lucide-react": "^0.562.0",
    "maplibre-gl": "^5.15.0",
    "next": "^15.5.2",
    "next-intl": "^4.6.1",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251224.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/dompurify": "^3.0.5",
    "@types/maplibre-gl": "^1.13.2",
    "@types/node": "^25.0.3",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "jsdom": "^27.4.0",
    "msw": "^2.12.7",
    "postcss": "^8.5.6",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "wrangler": "^4.54.0"
  }
}
