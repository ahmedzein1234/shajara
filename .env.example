# ==================================
# CLOUDFLARE CONFIGURATION
# ==================================

# Your Cloudflare Account ID
# Find it in: Cloudflare Dashboard > Account > Account ID
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id

# Cloudflare API Token with permissions:
# - Account.Cloudflare Pages: Edit
# - Account.D1: Edit
# - Account.R2 Storage: Edit
# Create at: https://dash.cloudflare.com/profile/api-tokens
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# ==================================
# DATABASE CONFIGURATION
# ==================================

# D1 Database ID
# Create database: wrangler d1 create shajara-db
# Find ID in: Cloudflare Dashboard > Workers & Pages > D1
DATABASE_ID=your_d1_database_id

# Database name (must match wrangler.json)
DATABASE_NAME=shajara-db

# ==================================
# R2 STORAGE CONFIGURATION
# ==================================

# R2 Bucket name for media storage
R2_BUCKET_NAME=shajara-media

# R2 Preview bucket name (for development/preview environments)
R2_PREVIEW_BUCKET_NAME=shajara-media-preview

# Public URL for R2 bucket (optional, if using custom domain)
# Example: https://media.shajara.app or https://pub-xxxxx.r2.dev
R2_PUBLIC_URL=https://your-r2-bucket-url

# ==================================
# AUTHENTICATION (Future Implementation)
# ==================================

# Auth0 Configuration
# Sign up at: https://auth0.com
AUTH0_SECRET=use_openssl_rand_hex_32_to_generate_secret
AUTH0_BASE_URL=http://localhost:3000
AUTH0_ISSUER_BASE_URL=https://your-tenant.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret
AUTH0_AUDIENCE=https://your-api-audience

# Alternative: Clerk Authentication
# Sign up at: https://clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx

# ==================================
# APPLICATION CONFIGURATION
# ==================================

# Application URL (production)
NEXT_PUBLIC_APP_URL=https://shajara.pages.dev

# Default locale (ar for Arabic, en for English)
NEXT_PUBLIC_DEFAULT_LOCALE=ar

# Supported locales (comma-separated)
NEXT_PUBLIC_SUPPORTED_LOCALES=ar,en

# Environment (development, staging, production)
NODE_ENV=development
ENVIRONMENT=development

# ==================================
# FEATURE FLAGS
# ==================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_MAPS=true
NEXT_PUBLIC_ENABLE_MEDIA_UPLOAD=true
NEXT_PUBLIC_ENABLE_COLLABORATION=true
NEXT_PUBLIC_ENABLE_AUDIT_LOG=true

# ==================================
# ANALYTICS & MONITORING (Optional)
# ==================================

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Cloudflare Web Analytics
NEXT_PUBLIC_CF_ANALYTICS_TOKEN=your_cf_analytics_token

# Sentry for error tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# ==================================
# RATE LIMITING & SECURITY
# ==================================

# Rate limit for API requests (requests per minute)
RATE_LIMIT_MAX_REQUESTS=100

# JWT secret for sessions (if not using Auth0/Clerk)
JWT_SECRET=your_jwt_secret_generate_with_openssl

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://shajara.pages.dev

# ==================================
# EMAIL CONFIGURATION (Optional)
# ==================================

# For sending invitations and notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@shajara.app

# Resend API (alternative to SMTP)
RESEND_API_KEY=re_xxxxx

# ==================================
# DEVELOPMENT TOOLS
# ==================================

# Enable debug mode
DEBUG=false

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Skip SSL verification in development (DO NOT USE IN PRODUCTION)
NODE_TLS_REJECT_UNAUTHORIZED=1
